<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Màu nền khi focus -->
            <stroke android:color="#00FF00" /> <!-- Màu viền khi focus -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Màu nền mặc định -->
            <stroke android:color="#000000"
                android:width="1dp"/> <!-- Màu viền mặc định -->

        </shape>
    </item>
</selector>