<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Màu nền khi focus -->
            <stroke android:color="#B6B6B6" /> <!-- Màu viền khi focus -->
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Màu nền mặc định -->
            <stroke android:color="#8F8F8F"
                android:width="1dp"/> <!-- Màu viền mặc định -->
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>